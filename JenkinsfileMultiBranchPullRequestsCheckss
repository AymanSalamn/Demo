pipeline {
    agent any
    
    stages {
        stage('Test') {
            steps {
                // Your test steps here
                echo "Testing"
            }
        }
    }
    
    post {
        success {
            script {
                currentBuild.result = 'SUCCESS' // Set build status to SUCCESS
                setBuildStatus('SUCCESS') // Update build status
            }
        }
        failure {
            script {
                currentBuild.result = 'FAILURE' // Set build status to FAILURE
                setBuildStatus('FAILURE') // Update build status
            }
        }
        unstable {
            script {
                currentBuild.result = 'UNSTABLE' // Set build status to UNSTABLE
                setBuildStatus('UNSTABLE') // Update build status
            }
        }
        aborted {
            script {
                currentBuild.result = 'ABORTED' // Set build status to ABORTED
                setBuildStatus('ABORTED') // Update build status
            }
        }
        // Add more post actions as needed
    }
}
