pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Your build steps here
            }
            post {
                success {
                    // Update GitHub PR status on success
                    script {
                        currentBuild.result = 'SUCCESS'
                        githubNotify context: 'Jenkins', description: 'Build successful', state: 'SUCCESS'
                    }
                }
                failure {
                    // Update GitHub PR status on failure
                    script {
                        currentBuild.result = 'FAILURE'
                        githubNotify context: 'Jenkins', description: 'Build failed', state: 'FAILURE'
                    }
                }
            }
        }
    }
}
