pipeline {
    agent any

    environment {
        PATH = "/var/lib/jenkins/.local/bin:$PATH"
    }

    stages {
        stage('Install Requirements'){
            steps {
                script {
                    sh "pip3 install -q -r requirements.txt"
                }
            }
        }

        stage('Update Build Name & Description') {
            steps {
                script {
                    sh "python3 ./test.py"
                }
            }
        }       
    }
    
    post {
        always {
            deleteDir()
        }
    }
}
