pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Your build steps
            }
        }
        stage('Test') {
            steps {
                // Your test steps
            }
        }
    }
    
    post {
        success {
            script {
                githubCommitStatus(
                    context: 'Jenkins',
                    state: 'success',
                    description: 'Custom message for successful build!'
                )
            }
        }
        failure {
            script {
                githubCommitStatus(
                    context: 'Jenkins',
                    state: 'failure',
                    description: 'Custom message for failed build!'
                )
            }
        }
    }
}
