pipeline {
    agent any
    
    environment {
        PATH = "/usr/bin/python3:/var/lib/jenkins/.local/bin:$PATH"
    }

    stages {
        stage('Update Build Name & Description') {
            steps {
                script {
                    sh "pytest --version"
                    sh "python3 --version"
                }
            }
        }
    }
    
    post {
        always {
            deleteDir()
        }
    }
}
