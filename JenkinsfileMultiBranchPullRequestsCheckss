pipeline {
    agent any
    stages {
        stage('Print Hello') {
            when {
                branch 'PR-*'
            }
            steps {
                script {
                    sh "git branch -r"
                    echo "Running tests for files"
                }
            }
        }
    }
    
    post {
        always {
            // Always clean the workspace regardless of the build result
            deleteDir()
        }
    }
}
