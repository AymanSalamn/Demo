pipeline {
    agent any
    stages {
        stage('Update Build Name & Description') {
            steps {
                script {
                    sh "echo $PATH"
                    sh "/var/lib/jenkins/.local/bin/pytest --version"
                    sh "pytest --version"
                }
            }
        }
    }
    
    post {
        always {
            deleteDir()
        }
    }
}
