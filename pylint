pipeline {
    agent any
    stages {

        stage('Install Requirements'){    
            when {
                branch 'PR-*'
            }
            steps {
                script {
                    sh "pip3 install pylint==3.0.2"
                }
            }
        }

        stage('Get Changed Files') {
            when {
                branch 'PR-*'
            }
            steps {
                    script {
                        def changedFilesBetweenBranches = sh(script: "git diff --name-only origin/${env.ghprbTargetBranch} origin/${env.ghprbSourceBranch}", returnStdout: true).trim().split('\n')
                        def changedPythonFiles = changedFilesBetweenBranches.findAll { it.endsWith('.py')}
                        if (changedPythonFiles){
                            env.PYTHON_FILES = changedPythonFiles.collect { it.trim() }.join(' ')
                        }
                    }
                }
        }
         -
        stage('Check Pylint') {
            when {
               allOf {
                    branch 'PR-*'
                    expression { return env.PYTHON_FILES?.trim() }
                }
            }
            steps {
                script {
                    sh "/var/lib/jenkins/.local/bin/pylint ${env.PYTHON_FILES}"   
                }
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}
