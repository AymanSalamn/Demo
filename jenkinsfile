pipeline {
    agent any

    environment {
        ALLURE_VERSION = '2.27.0'
        CURRENT_DIR = pwd()
        ALLURE_TGZ = "allure-${ALLURE_VERSION}.tgz"
        ALLURE_URL = "https://github.com/allure-framework/allure2/releases/download/${ALLURE_VERSION}/${ALLURE_TGZ}"
        ALLURE_DIR = "${env.CURRENT_DIR}/allure-${ALLURE_VERSION}"
    }

    stages {
        stage('Install Allure') {
            steps {
                script {
                    // Download Allure
                    sh "wget -q -nv ${env.ALLURE_URL}"
                    
                    // Extract Allure
                    sh "tar -zxf ${env.ALLURE_TGZ} -C ${env.CURRENT_DIR} > /dev/null"
                    
                    // Create symbolic link
                    sh "ln -sf ${env.ALLURE_DIR}/bin/allure /usr/bin/allure"
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Cleanup downloaded files
                sh "rm -f ${env.ALLURE_TGZ}"
            }
        }
    }
}
