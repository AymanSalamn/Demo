pipeline {
    agent any
    stages {
        stage('Install Allure') {
            steps {
                script {
                    // GET current dir 
                    def current_dir = pwd()
                    sh "echo ${current_dir}"
                    sh 'wget -q -nv https://github.com/allure-framework/allure2/releases/download/2.27.0/allure-2.27.0.tgz'
                    sh "tar -zxf allure-2.27.0.tgz -C ./"
                    sh "./allure-2.27.0/bin/allure --version"
                }
            }
        }

        stage('Fetch Changed Files from PR') {
            steps {
                script {
                    // Assuming the repository is already checked out in the workspace
                    def prNumber = env.CHANGE_ID  // CHANGE_ID is a Jenkins environment variable for the PR number
                    
                    // Fetch the changed files from the PR
                    def changedFiles = sh(script: "git diff --name-only origin/main...origin/pr/${prNumber}/merge", returnStdout: true).trim()
                    
                    // Output the changed files
                    echo "Changed files:\n${changedFiles}"
                    
                    // Save changed files into an environment variable for later stages if needed
                    env.CHANGED_FILES = changedFiles
                }
            }
        }

        stage('Run Test') {
            steps {
                script {
                    sh "/var/lib/jenkins/.local/bin/pytest"
                }
            }
        }
    }
    
    // Add post-build actions if necessary
    post {
        always {
            // Always clean the workspace regardless of the build result
            deleteDir()
        }
    }
}
