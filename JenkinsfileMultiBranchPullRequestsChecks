pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                checkout scm
            }
        }
        stage('Get Changed Files') {
            steps {
                script {
                    // Get the base branch (e.g., master or main) and the PR branch
                    sh "git branch -r"
                }
            }
        }
    }
}
