pipeline {
    agent any
    stages {
        stage('Run Test') {
            steps {
                script {
                    sh "/var/lib/jenkins/.local/bin/${env.PYTEST_COMMAND} --alluredir=${env.REPORT_DIR_NAME}"
                }
            }
        }
    }
    
    // Add post-build actions if necessary
    post {
        always {
            // Always clean the workspace regardless of the build result
            deleteDir()
        }
    }
}
